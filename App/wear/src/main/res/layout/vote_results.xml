<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    
    <TextView
        android:id="@+id/vote_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="District Results 2012" />


    <TextView
        android:id="@+id/district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="10sp"
        android:text="Berkeley, CA"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/democrat2"

            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="20dp"/>
            <TextView
                android:id="@+id/democrat"
                android:background="@color/democrat"
                android:paddingLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/republican2"
                android:paddingLeft="10dp"

                android:layout_width="50dp"
                android:layout_height="20dp"/>
        <TextView
            android:id="@+id/republican"
            android:paddingLeft="10dp"
            android:background="@color/republican"
            android:layout_width="10dp"
            android:layout_height="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

            <TextView
            android:paddingLeft="10dp"
            android:id="@+id/other2"
            android:layout_width="50dp"
            android:layout_height="30dp"/>

            <TextView
                android:paddingLeft="10dp"
                android:id="@+id/other"
                android:background="@color/other"
                android:layout_width="10dp"
                android:layout_height="30dp"/>


    </LinearLayout>


</LinearLayout>