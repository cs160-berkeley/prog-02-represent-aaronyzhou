<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.aaron.congressapp.RepresentativeDetailFragment">

    <ImageView
        android:id="@+id/rep_image"
        android:foregroundGravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/rep_name"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="name"/>

    <TextView
        android:id="@+id/rep_party"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/committees"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Committees Served:"/>

    <TextView
        android:id="@+id/committee_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Good Design Committee"/>

    <TextView
        android:id="@+id/bills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Bills Passed:"/>

    <TextView
        android:id="@+id/bill_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Bill For More Money"/>



</LinearLayout>
